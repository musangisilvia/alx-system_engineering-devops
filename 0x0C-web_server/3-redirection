#!/usr/bin/env bash
# Script to install nginx on server

sudo apt-get update
sudo apt-get install -y nginx
echo "Holberton School" | sudo tee /var/www/html/index.nginx-debian.html
redir="\\\trewrite ^/redirect_me/$ https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent"
sudo sed -i "42i $redir" /etc/nginx/sites-available/default
sudo service nginx restart
